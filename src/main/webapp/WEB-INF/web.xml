<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <session-config>
        <session-timeout>30</session-timeout> <!-- время жизни сессии -->
        <cookie-config>
            <max-age>3600</max-age> <!-- время жизни cookie -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode> <!-- способ отслеживания сессий -->
    </session-config>
    <distributable/> <!-- указывает, что сессия может распределяться на несколько инстансов сервера -->
</web-app>